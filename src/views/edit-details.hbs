
{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Edit Student Details</h3>
    </div>
    <div class="card-body">
      <form action="/student-details/{{user._id}}" method="POST">
        <input type="hidden" name="_method">
        <div class="form-group">
            <input type="text"  name="name" class="form-control"  id="name" placeholder="Name" value="{{user.name}}">
          </div>
         <div class="form-group">
            <input type="email" name="email" class="form-control"  id="email" placeholder="Email" value="{{user.email}}">
          </div>
        <div class="form-group">
            <input type="text" name="date" class="form-control"  id="date" placeholder="Date" value="{{user.date}}">
          </div>
          <div class="form-group">
                <button class="btn btn-primary btn-block" type="submit">Update Profile</button>
            </div>
      </form>
    </div>
  </div>
</div>
